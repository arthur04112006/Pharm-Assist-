# Configurações do Sistema de Triagem Farmacêutica
# Copie este arquivo para .env e ajuste as configurações

# Configurações do Flask
FLASK_DEBUG=True
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configurações do MySQL (opcional)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=triagem_farmaceutica
MYSQL_PORT=3306

# Configurações da Aplicação
APP_NAME=Sistema de Triagem Farmacêutica
APP_VERSION=1.0.0
ITEMS_PER_PAGE=20

# Configurações de Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Configurações de Relatórios
REPORTS_FOLDER=reports
